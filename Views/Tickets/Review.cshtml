@model My_ticket.Models.Ticket


<section class="vh-100 gradient-custom-2">
    <div class="container-fluid py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-8">
                <div class="card shadow-lg p-4">
                    <div class="text-center">
                        <h1 class="fw-bold">⭐ تقييم طلبك</h1>
                        <p class="text-muted">ساعدنا في تحسين خدمتنا بتقديم تقييمك</p>
                    </div>

                    <form asp-action="SubmitReview" asp-controller="Tickets" method="post">
                        <input type="hidden" name="orderId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="fw-bold">كيف كانت تجربتك؟</label>
                            <select class="form-control" name="rating" required>
                                <option value="5">⭐ ⭐ ⭐ ⭐ ⭐ - ممتاز</option>
                                <option value="4">⭐ ⭐ ⭐ ⭐ - جيد جدًا</option>
                                <option value="3">⭐ ⭐ ⭐ - جيد</option>
                                <option value="2">⭐ ⭐ - متوسط</option>
                                <option value="1">⭐ - سيء</option>
                            </select>
                        </div>

                        <div class="mb-3">
                            <label class="fw-bold">اترك تعليقًا</label>
                            <textarea class="form-control" name="comment" rows="3" placeholder="اكتب ملاحظاتك هنا..." required></textarea>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary px-4 py-2 fw-bold">إرسال التقييم</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <a href="/Tickets/My_Tickets" class="btn btn-danger">إلغاء</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

