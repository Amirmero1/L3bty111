@{
    ViewData["Title"] = "تواصل معنا";
}

<style>
    /* Reset and General Styles */
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Cairo', sans-serif;
        background: linear-gradient(135deg, #ffebef, #d6f0fa);
        color: #333;
        overflow-x: hidden;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 15px;
    }

    /* Contact Section */
    .contact-section {
        padding: 5rem 0;
        background: linear-gradient(135deg, #ff8c94, #4ecdc4);
        position: relative;
        overflow: hidden;
    }

    .contact-section::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 320"><path fill="rgba(255,255,255,0.1)" fill-opacity="1" d="M0,160L48,176C96,192,192,224,288,213.3C384,203,480,149,576,138.7C672,128,768,160,864,181.3C960,203,1056,213,1152,197.3C1248,181,1344,139,1392,117.3L1440,96L1440,320L1392,320C1344,320,1248,320,1152,320C1056,320,960,320,864,320C768,320,672,320,576,320C480,320,384,320,288,320C192,320,96,320,48,320L0,320Z"></path></svg>') repeat-x;
        animation: wave 10s linear infinite;
    }

    keyframes wave {
        0% { transform: translateX(0); }
        100% { transform: translateX(-1440px); }
    }

    .section-title {
        font-size: 2.5rem;
        color: #fff;
        text-align: center;
        margin-bottom: 1rem;
        position: relative;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.1);
        animation: fadeInDown 1s ease;
    }

    keyframes fadeInDown {
        from { opacity: 0; transform: translateY(-20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .section-subtitle {
        font-size: 1.2rem;
        color: #ffebef;
        text-align: center;
        margin-bottom: 3rem;
        animation: fadeInUp 1s ease 0.5s forwards;
        opacity: 0;
    }

    keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .contact-container {
        display: flex;
        gap: 2rem;
        flex-wrap: wrap;
        background: rgba(255, 255, 255, 0.1);
        padding: 2rem;
        border-radius: 15px;
        backdrop-filter: blur(5px);
    }

    .contact-info, .contact-form {
        flex: 1;
        min-width: 300px;
    }

    /* Contact Info */
    .contact-info {
        background: rgba(255, 255, 255, 0.9);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        animation: fadeInLeft 1s ease;
    }

    .contact-info:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    keyframes fadeInLeft {
        from { opacity: 0; transform: translateX(-20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .contact-info h4 {
        font-size: 1.5rem;
        color: #ff6b6b;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .contact-info p {
        font-size: 1rem;
        color: #333;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .contact-info i {
        font-size: 1.2rem;
        transition: transform 0.3s ease;
    }

    .contact-info p:hover i {
        transform: scale(1.2);
    }

    .contact-info a {
        color: #4ecdc4;
        text-decoration: none;
        transition: color 0.3s ease;
    }

    .contact-info a:hover {
        color: #ff6b6b;
    }

    /* Contact Form */
    .contact-form {
        background: rgba(255, 255, 255, 0.9);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        animation: fadeInRight 1s ease;
    }

    .contact-form:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    }

    keyframes fadeInRight {
        from { opacity: 0; transform: translateX(20px); }
        to { opacity: 1; transform: translateX(0); }
    }

    .contact-form h4 {
        font-size: 1.5rem;
        color: #ff6b6b;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .form-group {
        margin-bottom: 1.5rem;
    }

    .form-group label {
        display: block;
        font-size: 1rem;
        color: #333;
        margin-bottom: 0.5rem;
        font-weight: bold;
    }

    .form-group input,
    .form-group textarea {
        width: 100%;
        padding: 12px;
        border: 2px solid #ff6b6b;
        border-radius: 10px;
        background: #fff;
        color: #333;
        transition: all 0.3s ease;
        font-size: 1rem;
    }

    .form-group input:focus,
    .form-group textarea:focus {
        border-color: #4ecdc4;
        box-shadow: 0 0 10px rgba(78, 205, 196, 0.3);
        outline: none;
    }

    .form-group textarea {
        resize: none;
    }

    .submit-btn {
        width: 100%;
        padding: 12px;
        background: linear-gradient(90deg, #ff6b6b, #ff8c94);
        color: #fff;
        border: none;
        border-radius: 25px;
        font-size: 1.1rem;
        font-weight: bold;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 3px 10px rgba(255, 107, 107, 0.3);
    }

    .submit-btn:hover {
        background: linear-gradient(90deg, #ff8c94, #ff6b6b);
        transform: translateY(-3px);
        box-shadow: 0 5px 15px rgba(255, 107, 107, 0.5);
    }

    /* Responsive Design */
    media (max-width: 768px) {
        .contact-container {
            flex-direction: column;
        }

        .section-title {
            font-size: 2rem;
        }

        .section-subtitle {
            font-size: 1rem;
        }
    }
</style>

<section class="contact-section">
    <div class="container">
        <h2 class="section-title">تواصل مع عالم لعبتى</h2>
        <p class="section-subtitle">إذا كان لديك أي استفسار، لا تتردد في التواصل معنا عبر النموذج التالي.</p>

        <div class="contact-container">
            <!-- معلومات الاتصال -->
            <div class="contact-info">
                <h4><i class="fas fa-info-circle"></i> معلومات الاتصال</h4>
                <p><i class="fas fa-map-marker-alt text-danger"></i> المنوفية، مصر</p>
                <p><i class="fas fa-envelope text-primary"></i> البريد الإلكتروني: <a href="mailto:L3bttyy@gmail.com">L3bttyy@gmail.com</a></p>
                <p><i class="fas fa-phone text-success"></i> الهاتف: <a href="tel:+201276448414">+201276448414</a></p>
            </div>

            <!-- نموذج التواصل -->
            <div class="contact-form">
                <h4><i class="fas fa-envelope-open-text"></i> أرسل رسالة</h4>
                <form id="contactForm">
                    <div class="form-group">
                        <label for="name">الاسم</label>
                        <input type="text" class="form-control" id="name" placeholder="ادخل اسمك" required>
                    </div>
                    <div class="form-group">
                        <label for="email">البريد الإلكتروني</label>
                        <input type="email" class="form-control" id="email" placeholder="example@email.com" required>
                    </div>
                    <div class="form-group">
                        <label for="phone">الهاتف</label>
                        <input type="text" class="form-control" id="phone" placeholder="ادخل رقم هاتفك" required>
                    </div>
                    <div class="form-group">
                        <label for="message">الرسالة</label>
                        <textarea class="form-control" id="message" rows="4" placeholder="اكتب رسالتك هنا..." required></textarea>
                    </div>
                    <button type="submit" class="submit-btn">إرسال</button>
                </form>
            </div>
        </div>
    </div>
</section>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const contactForm = document.getElementById('contactForm');
        if (contactForm) {
            contactForm.addEventListener('submit', function (e) {
                e.preventDefault();
                const submitBtn = this.querySelector('.submit-btn');
                const originalBtnText = submitBtn.innerHTML;
                submitBtn.innerHTML = '<div class="loading-spinner"></div> جاري الإرسال...';
                submitBtn.disabled = true;

                setTimeout(() => {
                    alert('تم إرسال رسالتك بنجاح! سنتواصل معك قريباً.');
                    this.reset();
                    submitBtn.innerHTML = originalBtnText;
                    submitBtn.disabled = false;
                }, 1500);
            });
        }
    });
</script>