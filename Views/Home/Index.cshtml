<!DOCTYPE html>
<html lang="ar" dir="rtl">
@model List<My_ticket.Models.Ticket>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Ticket - ألعاب تعليمية للأطفال</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="css/styles.css">
    <style>

        .recommendations-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            padding: 20px;
        }

        .game-card {
            width: 100%;
            max-width: 350px;
            margin: 0 auto;
            box-sizing: border-box;
        }

        .game-image-container img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }

        .game-header, .game-footer {
            padding: 10px;
            text-align: center;
        }

        .game-card .game-title {
            font-size: 1.2rem;
            margin: 0;
        }

        .game-card .current-price {
            font-size: 1.1rem;
        }

        .game-card .cart-btn {
            display: inline-block;
            padding: 8px 16px;
            font-size: 1rem;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <header class="main-header fun-theme">
        <div class="fun-decorations">
            <div class="balloon balloon-1"></div>
            <div class="balloon balloon-2"></div>
            <div class="balloon balloon-3"></div>
            <div class="cloud cloud-1"></div>
            <div class="cloud cloud-2"></div>
            <div class="star star-1"></div>
            <div class="star star-2"></div>
            <div class="star star-3"></div>
        </div>

        <div class="header-content">
            <div class="logo-animation-large">
                <svg class="logo-svg" viewBox="0 0 100 100">
                    <circle class="logo-circle" cx="50" cy="50" r="45" />
                    <circle class="logo-eye1" cx="35" cy="40" r="8" />
                    <circle class="logo-eye2" cx="65" cy="40" r="8" />
                    <path class="logo-smile" d="M30,60 Q50,80 70,60" fill="none" stroke-width="5" stroke-linecap="round" />
                </svg>
            </div>
            <h1>
                ألعاب تعليمية للأطفال
                <span>بطابع مصري فريد</span>
            </h1>
            <p class="header-subtitle">نقدم ألعاباً تعليمية مبتكرة تجمع بين المتعة والتعلم، مستوحاة من الحضارة المصرية العريقة لتنمية مهارات طفلك بأسلوب ممتع وفريد</p>

            <div class="header-cta">
                <a href="#games" class="cta-button">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
                        <polyline points="7.5 4.21 12 6.81 16.5 4.21"></polyline>
                        <polyline points="7.5 19.79 7.5 14.6 3 12"></polyline>
                        <polyline points="21 12 16.5 14.6 16.5 19.79"></polyline>
                        <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
                        <line x1="12" y1="22.08" x2="12" y2="12"></line>
                    </svg>
                    تصفح الألعاب
                </a>
                <a href="/Home/AboutUs" class="cta-button secondary">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2a10 10 0 1 0 0 20 10 10 0 0 0 0-20z"></path>
                        <path d="M12 8v4"></path>
                        <path d="M12 16h.01"></path>
                    </svg>
                    تعرف على البرنامج
                </a>
            </div>
        </div>

        <div class="header-wave">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1440 100" preserveAspectRatio="none">
                <path fill="#ffffff" fill-opacity="1" d="M0,32L60,42.7C120,53,240,75,360,74.7C480,75,600,53,720,42.7C840,32,960,32,1080,37.3C1200,43,1320,53,1380,58.7L1440,64L1440,100L1380,100C1320,100,1200,100,1080,100C960,100,840,100,720,100C600,100,480,100,360,100C240,100,120,100,60,100L0,100Z"></path>
            </svg>
        </div>
    </header>

    <!-- Age Recommender Tool -->
    <section id="age-recommender" class="age-recommender">
        <div class="container">
            <h2 class="section-title">أداة اختيار الألعاب المناسبة</h2>

            <div class="age-recommender-container">
                <div class="age-slider-container">
                    <label for="ageSlider" class="age-slider-label">عمر الطفل: <span id="ageValue">3-5</span></label>
                    <input type="range" id="ageSlider" class="age-slider" min="0" max="6" value="3" aria-label="عمر الطفل">
                    <div class="age-marks">
                        <span>0-1</span>
                        <span>1-2</span>
                        <span>2-3</span>
                        <span>3-5</span>
                        <span>5-8</span>
                        <span>8+</span>
                        <span>adults</span>
                    </div>
                </div>

                <div class="skill-selector">
                    <h3>المهارات المطلوب تنميتها</h3>
                    <div class="skill-checkboxes">
                        <label class="skill-checkbox">
                            <input type="checkbox" name="skill" value="learning" checked>
                            <span class="checkbox-custom"></span>
                            تعليمية
                        </label>
                        <label class="skill-checkbox">
                            <input type="checkbox" name="skill" value="thinking">
                            <span class="checkbox-custom"></span>
                            تفكير
                        </label>
                        <label class="skill-checkbox">
                            <input type="checkbox" name="skill" value="entertainment">
                            <span class="checkbox-custom"></span>
                            ترفيهية
                        </label>
                    </div>
                </div>

                <button id="recommendBtn" class="recommend-btn">
                    <svg class="magic-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                    </svg>
                    اقتراح الألعاب المناسبة
                </button>
            </div>

            <div id="recommendationsContainer" class="recommendations-container">
                <h3>الألعاب المقترحة</h3>
                <div id="recommendationsGrid" class="recommendations-grid">
                    <!-- سيتم ملء هذا القسم ديناميكياً بواسطة JavaScript -->
                </div>
            </div>
        </div>
    </section>

    <!-- Games Section -->
    <section id="games" class="games-section">
        <div class="container">
            <h2 class="section-title">الألعاب </h2>

            <div class="games-header">
                <div class="games-filter">
                    <div class="filter-group">
                        <label for="ageFilter">العمر:</label>
                        <select id="ageFilter" class="filter-select">
                            <option value="all">جميع الأعمار</option>
                            <option value="0-1">0-1 سنة</option>
                            <option value="1-2">1-2 سنة</option>
                            <option value="2-3">2-3 سنوات</option>
                            <option value="3-5">3-5 سنوات</option>
                            <option value="5-8">5-8 سنوات</option>
                            <option value="8+">8+ سنوات</option>
                            <option value="adults">الكبار</option>
                        </select>
                    </div>

                    <div class="filter-group">
                        <label for="skillFilter">النوع:</label>
                        <select id="skillFilter" class="filter-select">
                            <option value="all">جميع الأنواع</option>
                            <option value="learning">تعليمية</option>
                            <option value="thinking">تفكير</option>
                            <option value="entertainment">ترفيهية</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="games-grid" id="gamesGrid">
            </div>

            <div class="pagination" id="pagination">
