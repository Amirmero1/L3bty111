        animation: fadeInDown 0.3s ease-in-out;
    }

    keyframes fadeInDown {
        from {
            opacity: 0;
            transform: translateY(10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .dropdown-menu {
